@page
@model Bid_A_Product.Pages.Buyers.CreateModel

@{
    ViewData["Title"] = "Create";
}




<header class="masthead">
    <div class="container" style="height:50vh">
        <div class="intro-text">
            <div class="intro-lead-in">Register New Buyer</div>


        </div>
    </div>
</header>
<hr />
<div class="container">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Buyer.BuyerName" class="control-label"></label>
                    <input asp-for="Buyer.BuyerName" class="form-control" />
                    <span asp-validation-for="Buyer.BuyerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Buyer.BuyerAccountNumber" class="control-label"></label>
                    <input asp-for="Buyer.BuyerAccountNumber" class="form-control" />
                    <span asp-validation-for="Buyer.BuyerAccountNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>

  

    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
