@page
@model Bid_A_Product.Pages.Buyers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<header class="masthead">
    <div class="container" style="height:50vh">
        <div class="intro-text">
            <div class="intro-lead-in"> All Buyers</div>


        </div>
    </div>
</header>
<hr />
<div>
    <div class="container">

        <p>
            <a class="btn btn-primary" asp-page="Create">Create New Buyer</a>
        </p>
        <table class="table table-striped table-secondary">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Buyer[0].BuyerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Buyer[0].BuyerAccountNumber)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Buyer)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BuyerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BuyerAccountNumber)
                        </td>
                        <td>
                            <a  class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                            <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                            <a class="btn btn-primary" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>