@page
@model Bid_A_Product.Pages.Buyers.EditModel

@{
    ViewData["Title"] = "Edit";
}



<header class="masthead">
    <div class="container" style="height:50vh">
        <div class="intro-text">
            <div class="intro-lead-in"> Update Buyer</div>


        </div>
    </div>
</header>
<hr />
<div>
    <div class="container">


        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Buyer.Id" />
                    <div class="form-group">
                        <label asp-for="Buyer.BuyerName" class="control-label"></label>
                        <input asp-for="Buyer.BuyerName" class="form-control" />
                        <span asp-validation-for="Buyer.BuyerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Buyer.BuyerAccountNumber" class="control-label"></label>
                        <input asp-for="Buyer.BuyerAccountNumber" class="form-control" />
                        <span asp-validation-for="Buyer.BuyerAccountNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

       
    </div>

</div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
