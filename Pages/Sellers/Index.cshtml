@page
@model Bid_A_Product.Pages.Sellers.IndexModel

@{
    ViewData["Title"] = "Index";
}


<header class="masthead">
    <div class="container" style="height:50vh">
        <div class="intro-text">
            <div class="intro-lead-in"> All Sellers </div>


        </div>
    </div>
</header>

<div>
    <div class="container">
        <hr />
        <p>
            <a class="btn btn-primary" asp-page="Create">Create New Seller </a>
        </p>
        <table class="table table-striped table-secondary">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Seller[0].SellerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Seller[0].ContactNumber)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Seller)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SellerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNumber)
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                            <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                            <a class="btn btn-primary" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>