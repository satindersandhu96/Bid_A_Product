@page
@model Bid_A_Product.Pages.Bids.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<header class="masthead">
    <div class="container" style="height:50vh">
        <div class="intro-text">
            <div class="intro-lead-in">Bid Details</div>


        </div>
    </div>
</header>
<hr />
<div class="container">
    <div>
        <h4>Bid</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Bid.Buyer)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Bid.Buyer.BuyerRegistrationId)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Bid.Seller)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Bid.Seller.SellerRegistrationNumber)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Bid.Product)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Bid.Product.ProductRegistrationId)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Bid.BidPrice)
            </dt>
            <dd>
                $ @Html.DisplayFor(model => model.Bid.BidPrice)
            </dd>
        </dl>
    </div>
    <div>
        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Bid.Id">Edit</a> |
        
    </div>
</div>