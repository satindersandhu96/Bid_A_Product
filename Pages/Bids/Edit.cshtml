@page
@model Bid_A_Product.Pages.Bids.EditModel

@{
    ViewData["Title"] = "Edit";
}



<header class="masthead">
    <div class="container" style="height:50vh">
        <div class="intro-text">
            <div class="intro-lead-in">Update Bid</div>


        </div>
    </div>
</header>
<hr />
<div class="container">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Bid.Id" />
                <div class="form-group">
                    <label asp-for="Bid.ProductId" class="control-label"></label>
                    <select asp-for="Bid.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                    <span asp-validation-for="Bid.ProductId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bid.BuyerId" class="control-label"></label>
                    <select asp-for="Bid.BuyerId" class="form-control" asp-items="ViewBag.BuyerId"></select>
                    <span asp-validation-for="Bid.BuyerId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bid.SellerId" class="control-label"></label>
                    <select asp-for="Bid.SellerId" class="form-control" asp-items="ViewBag.SellerId"></select>
                    <span asp-validation-for="Bid.SellerId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bid.BidPrice" class="control-label"></label>
                    <input asp-for="Bid.BidPrice" class="form-control" />
                    <span asp-validation-for="Bid.BidPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

   

    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
